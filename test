-- Get all players in the game
local players = game:GetService("Players"):GetPlayers()

-- Function to add a box to a player's head
local function addBoxToHead(player)
    -- Get the player's character
    local character = player.Character
    if character then
        -- Create a new part (box)
        local box = Instance.new("Part")
        box.Size = Vector3.new(2, 2, 2)  -- Set the size of the box
        box.Shape = Enum.PartType.Block  -- Set the shape to a block
        box.BrickColor = BrickColor.new("Bright blue")  -- Set the color of the box
        box.Anchored = true  -- Make sure the box doesn't fall due to gravity

        -- Position the box on the player's head
        local head = character:WaitForChild("Head")
        box.CFrame = head.CFrame * CFrame.new(0, head.Size.Y / 2 + box.Size.Y / 2, 0)

        -- Parent the box to the character's head
        box.Parent = character
    end
end

-- Add a box to the head of each player in the game
for _, player in ipairs(players) do
    addBoxToHead(player)
end
