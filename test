-- Define parameters for the outline effect
local outlineColor = Color3.new(1, 1, 1)  -- White outline color
local outlineThickness = 0.1              -- Thickness of the outline

-- Function to add outline to a character
local function addOutline(character)
    -- Check if character and its humanoid exist
    if not character or not character:IsA("Model") then
        return
    end

    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if not humanoid then
        return
    end

    -- Create outline effect
    local outline = Instance.new("SelectionBox")
    outline.Name = "Outline"
    outline.Color3 = outlineColor
    outline.LineThickness = outlineThickness
    outline.Adornee = character.PrimaryPart or character.Head  -- Adjust adornee as needed
    outline.Parent = character
end

-- Add outline to all existing players
for _, player in ipairs(game:GetService("Players"):GetPlayers()) do
    addOutline(player.Character)
end

-- Add outline to new players as they spawn
game:GetService("Players").PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        addOutline(character)
    end)
end)
