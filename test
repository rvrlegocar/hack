-- Place this script in a ServerScript in Roblox
local Players = game:GetService("Players")

-- Function to add a box to a player's head
local function addBoxToHead(player)
    -- Find the player's character
    local character = player.Character
    if character then
        -- Create a box part
        local box = Instance.new("Part")
        box.Size = Vector3.new(2, 2, 2)  -- Adjust size as needed
        box.BrickColor = BrickColor.new("Bright blue")  -- Adjust color as needed
        box.Anchored = true
        box.CanCollide = false
        box.Parent = character.Head  -- Attach box to player's head
    end
end

-- Function to add box to all players
local function addBoxToAllPlayers()
    for _, player in ipairs(Players:GetPlayers()) do
        addBoxToHead(player)
    end
end

-- Add box to all players when they join
Players.PlayerAdded:Connect(function(player)
    addBoxToHead(player)
end)

-- Add box to all existing players when this script runs
addBoxToAllPlayers()

game.Players.PlayerAdded:Connect(function(player)
    handlePlayer(player)
end)
