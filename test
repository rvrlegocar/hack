local function createHeadBox(player)
    local head = player.Character and player.Character:FindFirstChild("Head")
    if head then
        local box = Instance.new("Part")
        box.Size = Vector3.new(2, 2, 2)  -- Adjust the size as needed
        box.Anchored = true
        box.CanCollide = false
        box.BrickColor = BrickColor.new("Bright blue")  -- Change color if desired
        box.Transparency = 0.5
        box.Parent = head
    end
end

-- Attach the head box to all existing players
for _, player in pairs(game.Players:GetPlayers()) do
    createHeadBox(player)
end

-- Attach the head box to any new players
game.Players.PlayerAdded:Connect(createHeadBox)
