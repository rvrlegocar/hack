-- Define constants for outline color and size
local OUTLINE_COLOR = Color3.new(1, 1, 1) -- White outline
local OUTLINE_SIZE = 0.1 -- Adjust as needed for thickness

-- Function to add outline to a player's character
local function addOutline(character)
    for _, part in ipairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            local outline = Instance.new("SelectionBox")
            outline.Name = "Outline"
            outline.LineThickness = OUTLINE_SIZE
            outline.Color3 = OUTLINE_COLOR
            outline.Adornee = part
            outline.Parent = part
        end
    end
end

-- Function to apply outline to all players in the game
local function applyOutlineToAllPlayers()
    for _, player in ipairs(game.Players:GetPlayers()) do
        local character = player.Character
        if character then
            addOutline(character)
        end
        -- Handle case where character is not immediately available (e.g., respawn)
        player.CharacterAdded:Connect(function(char)
            addOutline(char)
        end)
    end
end

-- Apply outline initially to all players in the game
applyOutlineToAllPlayers()

-- Handle case where new players join after the script starts
game.Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        addOutline(character)
    end)
end)
